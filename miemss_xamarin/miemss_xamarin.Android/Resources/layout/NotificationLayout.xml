
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="Message Notifications for:"
        android:id="@+id/msgText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:padding="10dp"
        android:textColor="@android:color/black"
        />
    <Switch
        android:id="@+id/SubscribeToRegion1"
        android:text="Region 1"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Switch
        android:id="@+id/SubscribeToRegion2"
        android:text="Region 2"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Switch
        android:id="@+id/SubscribeToRegion3"
        android:text="Region 3"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Switch
        android:id="@+id/SubscribeToRegion4"
        android:text="Region 4"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Switch
        android:id="@+id/SubscribeToRegion5"
        android:text="Region 5"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>